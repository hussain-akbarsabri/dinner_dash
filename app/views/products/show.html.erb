
<div class="container">
  <div class="w-50 mx-auto">
    <%= image_tag @product.image, class: "img-fluid"%>
    <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>


  <%= link_to 'Back', products_path %> <br>
  <%if user_signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
  <%end%>
  <%if !(user_signed_in? && current_user.admin?)%>

    <%= button_to "Add to cart", line_items_path(:product_id => @product.id), method: :post, class: "btn btn-outline-success" %>
  <%end%>

  </div>
</div>
