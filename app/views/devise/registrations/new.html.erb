


<section class="min-vh-100 bg-image">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class="form-outline mb-4">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form3Example1cg", class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example1cg">Email Address</label>
                </div>

                <div class="form-outline mb-4">
                    <%= f.text_field :full_name, autocomplete: "name", id:"form3Example3cg", class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example3cg">Full Name</label>
                </div>

                <div class="form-outline mb-4">
                  <%= f.text_field :display_name, autocomplete: "display_name", id:"form3Example2cg", class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example2cg">Display Name</label>
                </div>

                <div class="form-outline mb-4">
                  <%= f.password_field :password, autocomplete: "new-password", id:"form3Example4cg", class:"form-control form-control-lg"  %>
                  <label class="form-label" for="form3Example4cg">Password</label>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <div class="form-outline mb-4">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"form3Example4cdg", class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                </div>


                <div class="d-flex justify-content-center">
                  <%= f.submit "Register", class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <%= link_to "Log in", new_session_path(resource_name) %><br /></p>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
