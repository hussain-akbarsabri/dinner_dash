
<div class="container-fluid px-3">

  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Categories</h1>

  <%= link_to 'New Category', new_category_path, class: "btn btn-success w-100" %>

  <table class="table table-striped">
    <thead class="bg-dark text-white">
      <tr>
        <th>Title</th>
        <th>Title</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.title %></td>
          <td class="text-center"><%= link_to 'Show', category %></td>
          <td class="text-center"><%= link_to 'Edit', edit_category_path(category) %></td>
          <td class="text-center"><%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
